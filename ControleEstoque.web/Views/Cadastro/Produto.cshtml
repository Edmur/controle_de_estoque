@model List<ControleEstoque.web.Models.ProdutoModel>
@{
    ViewBag.Title = "Cadastro de Produtos";
}
<style>
    #grid_cadastro > thead > tr th:nth-child(1) {
        width: 140px;
    }

    #grid_cadastro > thead > tr th:nth-child(2) {
        width: 170px;
    }

    #grid_cadastro > thead > tr th:nth-child(3) {
        width: 100px;
    }

    #grid_cadastro > thead > tr th:nth-child(4) {
        width: 208px;
    }

    #grid_cadastro > thead > tr th:nth-child(5) {
        width: 125px;
    }

    #grid_cadastro > thead > tr th:nth-child(6) {
        width: 125px;
    }

    #grid_cadastro > thead > tr th:nth-child(7) {
        width: 90px;
    }

    #grid_cadastro > thead > tr th:nth-child(8) {
        width: 60px;
    }

    #grid_cadastro > thead > tr th:nth-child(9) {
        width: 60px;
    }

    #cadastro {
        width: 95%;
        margin: 0 auto;
    }

    #cadastro_cabecalho {
        border-bottom: 1px #dddddd solid;
    }

    #cadastro_conteudo {
        margin-top: 20px;
    }

    #cabecalho_grid {
        margin-bottom: 20px;
    }
</style>

<div id="cadastro">
    <section id="cadastro_cabecalho">
        <h1 class="cabecalho-center">@ViewBag.Title</h1>
    </section>
    <section id="cadastro_conteudo">
        <div id="cabecalho_grid" class="row">
            <div class="col-md-12">
                <a id="btn_incluir" class="btn btn-success pull-right" role="button"><i class="glyphicon glyphicon-plus"></i>Incluir</a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <table id="grid_cadastro" class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th class="cabecalho-center">Categoria</th>
                            <th class="cabecalho-center">Fornecedor</th>
                            <th class="cabecalho-center">Ean</th>
                            <th class="cabecalho-center">Descrição</th>
                            <th class="cabecalho-center">Preço de Custo</th>
                            <th class="cabecalho-center">Preço de Venda</th>
                            <th class="cabecalho-center">Un.Medida</th>
                            <th class="cabecalho-center">Qt.Un.</th>
                            <th class="cabecalho-center">Ativo</th>
                            <th class="cabecalho-center">Ação</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr data-id="@item.Id_Produto">
                                <td class="detalhe-left">@item.Id_Categoria</td>
                                <td class="detalhe-left">@item.Id_Fornecedor</td>
                                <td class="detalhe-center">@item.Ean</td>
                                <td class="detalhe-left">@item.Descricao</td>
                                <td class="detalhe-right">@item.PrecoCusto</td>
                                <td class="detalhe-right">@item.PrecoVenda</td>
                                <td class="detalhe-center">@item.Id_UnidadeMedida</td>
                                <td class="detalhe-right">@item.Qt_UnidadeMedida</td>
                                <td class="detalhe-center">@{var ativo = (item.Ativo ? "Sim" : "Não");}@ativo</td>
                                <td>
                                    <a class="btn-pequeno btn-primary btn-alterar" role="button"><i class="glyphicon glyphicon-pencil"></i> Alterar</a>
                                    <a class="btn-pequeno btn-danger btn-excluir" role="button"><i class="glyphicon glyphicon-trash"></i> Excluir</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>
@Html.Hidden("id_cadastro")
<div id="modal_cadastro" class="form-horizontal invisivel" role="dialog">
    <div id="msg_mensagem_aviso" class="text-danger invisivel"></div>
    <fieldset>
        <div class="row">

            <div class="form-group">
                @Html.Label("txt_categoria", "Categoria", new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    <select class="combobox input-large form-control" name="normal">
                        <option value="" selected="selected">Selecione a categoria</option>
                        <option value="1">Categoria 1</option>
                        <option value="2">Categoria 2</option>
                        <option value="3">Categoria 3</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                @Html.Label("txt_fornecedor", "Fornecedor", new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    <select class="combobox input-large form-control" name="normal">
                        <option value="" selected="selected">Selecione o fornecedor</option>
                        <option value="1">Fornecedor 1</option>
                        <option value="2">Fornecedor 2</option>
                        <option value="3">Fornecedor 3</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                @Html.Label("txt_ean", "Ean", new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.TextBox("txt_ean", null, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("txt_descricao", "Descrição", new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.TextBox("txt_descricao", null, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("txt_preco_custo", "Preço de custo", new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.TextBox("txt_preco_custo", null, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("txt_preco_venda", "Preço de venda", new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.TextBox("txt_preco_venda", null, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("txt_unidade_medida", "UM", new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.TextBox("txt_unidade_medida", null, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("txt_qt_unidade", "Qt.Un.", new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.TextBox("txt_qt_unidade", null, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("cbx_ativo", "Ativo", new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.CheckBox("cbx_ativo")
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <div class="modal-footer">
                        <a id="btn_sair" class="btn btn-default" role="button" data-dismiss="modal"><i class="glyphicon glyphicon-remove"></i> Sair</a>
                        <a id="btn_confirmar" class="btn btn-primary" role="button"><i class="glyphicon glyphicon-ok"></i> Salvar</a>
                    </div>
                    <div id="msg_aviso" class="alert alert-warning invisivel">Falta preencher os campos acima.</div>
                    <div id="msg_erro" class="alert alert-danger invisivel">Ops! Ocorreu um erro.</div>
                </div>
            </div>
        </div>
    </fieldset>
</div>
@section Scripts{
    <script>
        function abrir_form(dados) {
            $('#id_cadastro').val(dados.Id);
            $('#txt_categoria').val(dados.Id_Categoria);
            $('#txt_fornecedor').val(dados.Id_Fornecedor);
            $('#txt_ean').val(dados.Ean);
            $('#txt_descricao').val(dados.Descricao);
            $('#txt_preco_custo').val(dados.PrecoCusto);
            $('#txt_preco_venda').val(dados.PrecoVenda);
            $('#txt_unidade_medida').val(dados.Id_UnidadeMedida);
            $('#txt_qt_unidade').val(dados.Qt_UnidadeMedida);
            $('#cbx_ativo').prop('checked', dados.Ativo);

            var modal_cadastro = $('#modal_cadastro');

            $('#msg_mensagem_aviso').empty();
            $('#msg_aviso').hide();
            $('#msg_mensagem_aviso').hide();
            $('#msg_erro').hide();

            bootbox.dialog({
                title: '@ViewBag.Title',
                message: modal_cadastro
            })
            .on('shown.bs.modal', function () {
                modal_cadastro.show(0, function () {
                    $('#txt_categoria').focus();
                });
            })
            .on('hidden.bs.modal', function () {
                modal_cadastro.hide().appendTo('body');
            });
        }

        function criar_linha_grid(dados) {
            var ret =
                '<tr data-id=' + dados.Id + '>' +
                '<td class="detalhe-left">' + dados.Id_Categoria + '</td>' +
                '<td class="detalhe-left">' + dados.Id_Fornecedor + '</td>' +
                '<td class="detalhe-center">' + dados.Ean + '</td>' +
                '<td class="detalhe-left">' + dados.Descricao + '</td>' +
                '<td class="detalhe-right">' + dados.PrecoCusto + '</td>' +
                '<td class="detalhe-right">' + dados.PrecoVenda + '</td>' +
                '<td class="detalhe-center">' + dados.Id_UnidadeMedida + '</td>' +
                '<td class="detalhe-right">' + dados.Qt_UnidadeMedida + '</td>' +
                '<td class="detalhe-center">' + (dados.Ativo ? 'Sim' : 'Não') + '</td>' +
                '<td>' +
                '<a class="btn-pequeno btn-primary btn-alterar" role="button" style="margin-right: 3px"><i class="glyphicon glyphicon-pencil"></i> Alterar</a>' +
                '<a class="btn-pequeno btn-danger btn-excluir" role="button"><i class="glyphicon glyphicon-trash"></i> Excluir</a>' +
                '</td>' +
                '</tr>';

            return ret;
        }

        $(document).on('click', '#btn_incluir', function () {
            abrir_form({ Id: 0, Id_Categoria: 0, Id_Fornecedor: 0, Ean: '', Descricao: '', PrecoCusto: 0, PrecoVenda: 0, Id_UnidadeMedida: 0, Qt_UnidadeMedida: 0, Ativo: true });
        })
        .on('click', '.btn-alterar', function () {
            var btn = $(this);
            var id = btn.closest('tr').attr('data-id');
            var url = '@Url.Action("RecuperarProduto", "Cadastro")';
            var param = { 'id': id };

            $.post(url, param, function (response) {
                if (response) {
                    abrir_form(response);
                }
            });

        })
        .on('click', '.btn-excluir', function () {
            var btn = $(this);
            var tr = btn.closest('tr');
            var id = tr.attr('data-id');
            var url = '@Url.Action("ExcluirProduto", "Cadastro")';
            var param = { 'id': id };

            bootbox.confirm({
                message: "Confirma a exclusão do Produto?",
                buttons: {
                    confirm: {
                        label: 'Sim',
                        className: 'btn-danger'
                    },
                    cancel: {
                        label: 'Não',
                        className: 'btn-success'
                    }
                },
                callback: function (result) {
                    if (result) {

                        $.post(url, param, function (response) {
                            if (response) {
                                tr.remove();
                            }
                        });
                    }
                }
            });
        })
        .on('click', '#btn_confirmar', function () {
            var btn = $(this);
            var tr = btn.closest('tr');
            var url = '@Url.Action("SalvarProduto", "Cadastro")';
            var param = {
                Id: $('#id_cadastro').val(),
                Id_Categoria: $('#txt_categoria').val(),
                Id_Fornecedor: $('#txt_fornecedor').val(),
                Ean: $('#txt_ean').val(),
                Descricao: $('#txt_descricao').val(),
                PrecoCusto: $('#txt_preco_custo').val(),
                PrecoVenda: $('#txt_preco_venda').val(),
                Id_UnidadeMedida: $('#txt_unidade_medida').val(),
                Qt_UnidadeMedida: $('#txt_qt_unidade').val(),
                Ativo: $('#cbx_ativo').prop('checked')
            };

            $.post(url, param, function (response) {
                if (response.Resultado == "OK") {
                    if (param.Id == 0) {
                        param.Id = response.IdSalvo;
                        var table = $('#grid_cadastro').find('tbody')
                        var linha = criar_linha_grid(param);
                        table.append(linha);
                    }
                    else {
                        var linha = $('#grid_cadastro').find('tr[data-id=' + param.Id + ']').find('td');
                        linha
                            .eq(0).html(param.Id_Categoria).end()
                            .eq(1).html(param.Id_Fornecedor).end()
                            .eq(2).html(param.Ean).end()
                            .eq(3).html(param.Descricao).end()
                            .eq(4).html(param.PrecoCusto).end()
                            .eq(5).html(param.PrecoVenda).end()
                            .eq(6).html(param.Id_UnidadeMedida).end()
                            .eq(7).html(param.Qt_UnidadeMedida).end()
                            .eq(8).html(param.Ativo ? 'Sim' : 'Não');
                    }

                    $('#modal_cadastro').parents('.bootbox').modal('hide');
                }
                else if (response.Resultado == "ERRO") {
                    $('#msg_aviso').hide();
                    $('#msg_mensagem_aviso').hide();
                    $('#msg_erro').show();
                }
                else if (response.Resultado == "AVISO") {
                    $('#msg_mensagem_aviso').html(formatar_mensagem_aviso(response.Mensagens));
                    $('#msg_aviso').show();
                    $('#msg_mensagem_aviso').show();
                    $('#msg_erro').hide();
                }
            });
        });

        function formatar_mensagem_aviso(mensagens) {
            var ret = '';

            for (var i = 0; i < mensagens.length; i++) {
                ret += '<li>' + mensagens[i] + '</li>';
            }

            return '<ul>' + ret + '</ul>';
        }

    </script>
}